<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include android:layout_width="match_parent"
        android:layout_height="55dp"
        layout="@layout/header_layout"
        android:id="@+id/header"
        xmlns:android="http://schemas.android.com/apk/res/android" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/header">


    <!--  Location Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Location" />
    </android.support.design.widget.TextInputLayout>

    <!-- Confirm Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="24dp"
        android:background="@color/yellow"
        android:padding="12dp"
        android:text="Confirm Location" />

    <!--  Service Time Label -->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/servivce_time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Time Of Service" />
    </android.support.design.widget.TextInputLayout>


    <!-- Amount Label -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/confirmed_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250000 Rs"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"/>

    </LinearLayout>



    <!-- Confirm Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="24dp"
        android:background="@color/green"
        android:padding="12dp"
        android:text="Confirm" />



    <!-- Reject Button -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_reject_bid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="12dp"
        android:text="Reject" />

</LinearLayout>
    </RelativeLayout>