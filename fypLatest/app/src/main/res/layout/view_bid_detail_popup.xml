<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:layout_height="400dp"
    android:padding="2dp"
    android:background="@color/primary_dark"
    >

    <TextView
        android:id="@+id/date_text_view_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Goes Here"

        android:background="@color/primary"
        android:textSize="20dp"/>

    <ScrollView
        android:id="@+id/message_scroll_view_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/date_text_view_popup"
        android:layout_above="@+id/amount_text_view_popup">

        <TextView
            android:id="@+id/message_text_view_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Message content"

            android:padding="15sp"
            />
    </ScrollView>
    <TextView
        android:id="@+id/amount_text_view_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Goes Here"

        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:textSize="20dp"
        />
</RelativeLayout>