<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/AppTheme.Dark">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="titlw"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <TextView
        android:id="@+id/message_initials_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="messageasknfkjasndfkna"
        android:layout_below="@+id/title_textview"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/status_image_view"
        android:text="12/12/20117"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/sp_item_amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text_view"
        
        android:text="50000 rs"
        android:textColor="@android:color/white" />
    <!--  android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"-->

    <ImageView
        android:id="@+id/status_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tick"/>


</RelativeLayout>