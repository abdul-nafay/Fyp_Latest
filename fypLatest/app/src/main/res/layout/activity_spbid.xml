<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sourcey.movnpack.UserServiceProviderCommunication.UserBidActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">



        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/header_layout"
            android:id="@+id/header"
            xmlns:android="http://schemas.android.com/apk/res/android" />


        <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/empty_bid_image"
            android:id="@+id/empty_sp_bid"
            android:layout_centerInParent="true"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empty_sp_bid_textView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/empty_sp_bid"
            android:text="You have not received any bid."/>
</RelativeLayout>